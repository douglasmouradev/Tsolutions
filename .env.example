DB_HOST=localhost
DB_NAME=crm_chamados
DB_USER=root
DB_PASS=

# Em produção: usuário do banco com permissões mínimas (SELECT/INSERT/UPDATE/DELETE apenas nas tabelas necessárias)
APP_URL=http://localhost:8000
APP_ENV=local
APP_DEBUG=1

# Em produção: APP_ENV=production, APP_DEBUG=0 (forçado), HTTPS obrigatório
# CLAMAV_PATH=/usr/bin/clamscan (opcional; se vazio, scan de malware é desabilitado)
CLAMAV_PATH=

MAX_UPLOAD_MB=10

# SLA em horas por prioridade (usado quando vencimento não é informado)
SLA_URGENTE_HORAS=24
SLA_ALTA_HORAS=72
SLA_MEDIA_HORAS=120
SLA_BAIXA_HORAS=336
ALLOW_REQUESTER_CLOSE=1

TIMEZONE=America/Sao_Paulo

# E-mail (para redefinição de senha)
MAIL_HOST=
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASS=
MAIL_FROM=noreply@localhost
MAIL_FROM_NAME=T Solutions
MAIL_ENCRYPTION=tls
